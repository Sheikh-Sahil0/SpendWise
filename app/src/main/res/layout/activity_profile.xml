<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.ProfileActivity">

    <!-- Custom Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="?attr/colorSurface"
        android:elevation="@dimen/elevation_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:contentInsetStart="@dimen/spacing_md">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/min_touch_target"
                android:layout_height="@dimen/min_touch_target"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_arrow_back"
                app:iconTint="?attr/colorOnSurface"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Page Title -->
            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:textSize="@dimen/text_size_xl"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginStart="@dimen/spacing_md"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/backButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Main ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_md"
            android:paddingBottom="@dimen/spacing_xl">

            <!-- Profile Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileHeaderCard"
                style="@style/Widget.SpendWise.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                app:cardBackgroundColor="?attr/colorSurface"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_xl">

                    <!-- Large Profile Picture -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/profilePictureCard"
                        android:layout_width="@dimen/avatar_size_xl"
                        android:layout_height="@dimen/avatar_size_xl"
                        app:cardCornerRadius="48dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="?attr/colorPrimaryContainer"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:id="@+id/profilePicture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/profile_picture"
                            app:tint="?attr/colorOnPrimaryContainer" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Display Name -->
                    <TextView
                        android:id="@+id/displayName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="@dimen/text_size_xl"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/spacing_md"
                        app:layout_constraintTop_toBottomOf="@id/profilePictureCard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Username -->
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="johndoe"
                        android:textSize="@dimen/text_size_md"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/spacing_xs"
                        app:layout_constraintTop_toBottomOf="@id/displayName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Email -->
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="johndoe@example.com"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/spacing_xs"
                        app:layout_constraintTop_toBottomOf="@id/username"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Profile Options Section -->
            <TextView
                android:id="@+id/optionsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings"
                android:textSize="@dimen/text_size_lg"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="@dimen/spacing_xl"
                app:layout_constraintTop_toBottomOf="@id/profileHeaderCard"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Edit Profile Option -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/editProfileCard"
                style="@style/Widget.SpendWise.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                app:cardBackgroundColor="?attr/colorSurface"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintTop_toBottomOf="@id/optionsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_md"
                    android:minHeight="@dimen/list_item_height">

                    <!-- Edit Profile Icon -->
                    <ImageView
                        android:id="@+id/editProfileIcon"
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:contentDescription="@string/edit_icon"
                        android:src="@drawable/ic_edit"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- Edit Profile Text -->
                    <TextView
                        android:id="@+id/editProfileText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile"
                        android:textSize="@dimen/text_size_md"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginStart="@dimen/spacing_md"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/editProfileIcon"
                        app:layout_constraintEnd_toStartOf="@id/editProfileArrow" />

                    <!-- Arrow Icon -->
                    <ImageView
                        android:id="@+id/editProfileArrow"
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="?attr/colorOnSurfaceVariant"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- App Settings Section -->
            <TextView
                android:id="@+id/appSettingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_settings"
                android:textSize="@dimen/text_size_lg"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="@dimen/spacing_xl"
                app:layout_constraintTop_toBottomOf="@id/editProfileCard"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Theme Setting Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/themeSettingCard"
                style="@style/Widget.SpendWise.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                app:cardBackgroundColor="?attr/colorSurface"
                app:layout_constraintTop_toBottomOf="@id/appSettingsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_md">

                    <!-- Theme Icon -->
                    <ImageView
                        android:id="@+id/themeIcon"
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:contentDescription="@string/theme_icon"
                        android:src="@drawable/ic_palette"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- Theme Title -->
                    <TextView
                        android:id="@+id/themeTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/theme"
                        android:textSize="@dimen/text_size_md"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginStart="@dimen/spacing_md"
                        app:layout_constraintTop_toTopOf="@id/themeIcon"
                        app:layout_constraintStart_toEndOf="@id/themeIcon"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Theme Description -->
                    <TextView
                        android:id="@+id/themeDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_your_preferred_theme"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginTop="@dimen/spacing_xs"
                        app:layout_constraintTop_toBottomOf="@id/themeTitle"
                        app:layout_constraintStart_toEndOf="@id/themeIcon"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Theme Toggle Buttons -->
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/themeToggleGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        app:layout_constraintTop_toBottomOf="@id/themeDescription"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/lightThemeButton"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/light"
                            android:textSize="@dimen/text_size_sm"
                            app:icon="@drawable/ic_light_mode"
                            app:iconSize="18dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/darkThemeButton"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dark"
                            android:textSize="@dimen/text_size_sm"
                            app:icon="@drawable/ic_dark_mode"
                            app:iconSize="18dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/systemThemeButton"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/system"
                            android:textSize="@dimen/text_size_sm"
                            app:icon="@drawable/ic_auto_mode"
                            app:iconSize="18dp" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Account Actions Section -->
            <TextView
                android:id="@+id/accountActionsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account"
                android:textSize="@dimen/text_size_lg"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="@dimen/spacing_xl"
                app:layout_constraintTop_toBottomOf="@id/themeSettingCard"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutButton"
                style="@style/Widget.SpendWise.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_large"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="@string/logout"
                android:textColor="@color/expense_red"
                app:strokeColor="@color/expense_red"
                app:icon="@drawable/ic_logout"
                app:iconTint="@color/expense_red"
                app:iconGravity="textStart"
                app:layout_constraintTop_toBottomOf="@id/accountActionsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- App Info Section -->
            <TextView
                android:id="@+id/appInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textSize="@dimen/text_size_lg"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="@dimen/spacing_xl"
                app:layout_constraintTop_toBottomOf="@id/logoutButton"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- App Version Info -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/appInfoCard"
                style="@style/Widget.SpendWise.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                app:cardBackgroundColor="?attr/colorSurface"
                app:layout_constraintTop_toBottomOf="@id/appInfoTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_md">

                    <!-- App Icon -->
                    <ImageView
                        android:id="@+id/appIcon"
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:contentDescription="@string/app_icon"
                        android:src="@mipmap/ic_launcher"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- App Name -->
                    <TextView
                        android:id="@+id/appName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="@dimen/text_size_md"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginStart="@dimen/spacing_md"
                        app:layout_constraintTop_toTopOf="@id/appIcon"
                        app:layout_constraintStart_toEndOf="@id/appIcon"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- App Version -->
                    <TextView
                        android:id="@+id/appVersion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/version_info"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginTop="@dimen/spacing_xs"
                        app:layout_constraintTop_toBottomOf="@id/appName"
                        app:layout_constraintStart_toEndOf="@id/appIcon"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- App Tagline -->
                    <TextView
                        android:id="@+id/appTagline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/app_tagline"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginStart="@dimen/spacing_md"
                        app:layout_constraintTop_toBottomOf="@id/appVersion"
                        app:layout_constraintStart_toEndOf="@id/appIcon"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>