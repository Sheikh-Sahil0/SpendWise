<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <!-- Amount Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/amountCard"
            style="@style/Widget.SpendWise.Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="@color/income_green"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:id="@+id/amountIcon"
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:src="@drawable/ic_currency_rupee"
                    app:tint="@color/income_green"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/amountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textSize="@dimen/text_size_md"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginStart="@dimen/spacing_sm"
                    app:layout_constraintTop_toTopOf="@id/amountIcon"
                    app:layout_constraintBottom_toBottomOf="@id/amountIcon"
                    app:layout_constraintStart_toEndOf="@id/amountIcon" />

                <!-- Amount Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/amountInputLayout"
                    style="@style/Widget.SpendWise.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:hint="Enter amount"
                    app:prefixText="â‚¹ "
                    app:layout_constraintTop_toBottomOf="@id/amountIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amountInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/text_size_md"
                        android:textColor="?attr/colorOnSurface"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Description Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/descriptionCard"
            style="@style/Widget.SpendWise.Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="@color/income_green"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/amountCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:id="@+id/descriptionIcon"
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:src="@drawable/ic_description"
                    app:tint="@color/income_green"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/descriptionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="@dimen/text_size_md"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginStart="@dimen/spacing_sm"
                    app:layout_constraintTop_toTopOf="@id/descriptionIcon"
                    app:layout_constraintBottom_toBottomOf="@id/descriptionIcon"
                    app:layout_constraintStart_toEndOf="@id/descriptionIcon" />

                <!-- Description Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/descriptionInputLayout"
                    style="@style/Widget.SpendWise.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:hint="Enter description"
                    app:layout_constraintTop_toBottomOf="@id/descriptionIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/descriptionInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:textSize="@dimen/text_size_md"
                        android:textColor="?attr/colorOnSurface"
                        android:maxLines="3" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Date Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dateCard"
            style="@style/Widget.SpendWise.Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="@color/income_green"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/descriptionCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:id="@+id/dateIcon"
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:src="@drawable/ic_calendar_today"
                    app:tint="@color/income_green"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/dateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="@dimen/text_size_md"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginStart="@dimen/spacing_sm"
                    app:layout_constraintTop_toTopOf="@id/dateIcon"
                    app:layout_constraintBottom_toBottomOf="@id/dateIcon"
                    app:layout_constraintStart_toEndOf="@id/dateIcon" />

                <!-- Date Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dateInputLayout"
                    style="@style/Widget.SpendWise.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:hint="Select date"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_calendar_today"
                    app:endIconTint="@color/income_green"
                    app:layout_constraintTop_toBottomOf="@id/dateIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dateInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:textSize="@dimen/text_size_md"
                        android:textColor="?attr/colorOnSurface"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Income Type Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/incomeInfoCard"
            style="@style/Widget.SpendWise.Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            app:cardBackgroundColor="@color/income_green_container"
            app:layout_constraintTop_toBottomOf="@id/dateCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:id="@+id/incomeTypeIcon"
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:src="@drawable/ic_trending_up"
                    app:tint="@color/income_green"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/incomeTypeTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Recording Income"
                    android:textSize="@dimen/text_size_lg"
                    android:textStyle="bold"
                    android:textColor="@color/income_green"
                    android:layout_marginStart="@dimen/spacing_md"
                    app:layout_constraintTop_toTopOf="@id/incomeTypeIcon"
                    app:layout_constraintStart_toEndOf="@id/incomeTypeIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/incomeTypeDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Add your earnings to track financial progress"
                    android:textSize="@dimen/text_size_sm"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginStart="@dimen/spacing_md"
                    app:layout_constraintTop_toBottomOf="@id/incomeTypeTitle"
                    app:layout_constraintStart_toEndOf="@id/incomeTypeIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>