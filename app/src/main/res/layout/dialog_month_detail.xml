<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <!-- Month Title -->
    <TextView
        android:id="@+id/monthTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="January 2025"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center"
        android:drawablePadding="12dp"
        app:drawableStartCompat="@drawable/ic_calendar_today"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Income Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/incomeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/income_green"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@id/monthTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/incomeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_trending_up"
                app:tint="@color/income_green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/incomeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Income"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/incomeIcon" />

            <TextView
                android:id="@+id/incomeAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹20,200"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/income_green"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/incomeLabel"
                app:layout_constraintStart_toEndOf="@id/incomeIcon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Expense Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/expenseCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/expense_red"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@id/incomeCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/expenseIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_trending_down"
                app:tint="@color/expense_red"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/expenseLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Expense"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/expenseIcon" />

            <TextView
                android:id="@+id/expenseAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹12,800"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/expense_red"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/expenseLabel"
                app:layout_constraintStart_toEndOf="@id/expenseIcon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Savings/Deficit Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/savingsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:strokeColor="@color/savings_blue"
        app:strokeWidth="2dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@id/expenseCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/savingsIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_savings"
                app:tint="@color/savings_blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/savingsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Net Savings"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/savingsIcon" />

            <TextView
                android:id="@+id/savingsAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹7,400"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/savings_blue"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/savingsLabel"
                app:layout_constraintStart_toEndOf="@id/savingsIcon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>